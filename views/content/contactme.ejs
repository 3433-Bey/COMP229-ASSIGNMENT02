<%- include ../partials/header.ejs %>

<%- include ../partials/main-nav.ejs %>

  
    <!--Main Content-->
 <main class="container">
       <div class="row justify-content-md-center">
        <div class="col-6">
          <h2 class="h2"><%= message %></h2>
          <hr class="my-4">
        </div>
      </div>


        <div class="row justify-content-md-center">
            <div class="col-lg-8 col-md-8 col-sm-10 col-xs-10">

                <form>
                    <div class="form-group">
                        <label for="fullName">Full Name</label>
                        <input type="text" class="form-control" id="fullName" 
                        aria-describedby="fullName" name="fullName" placeholder="Enter your Full Name" required>
                    </div>

                    <div class="form-group">
                        <label for="contactNumber">Phone Number</label>
                        <input type="tel" class="form-control" id="contactNumber" 
                        aria-describedby="contactNumber"  name="contactNumber" placeholder="Enter your Phone Number" required>
                    </div>

                    <div class="form-group">
                        <label for="emailAddress">Email address</label>
                        <input type="email" class="form-control" id="emailAddress" 
                        aria-describedby="emailAddress"  name="emailAddress" placeholder="Enter your Email Address" required>
                    </div>

                    <div class="form-group">
                        <label for="message">Comment</label>
                        <textarea class="form-control" id="message" rows="3"  name="message" placeholder="Please feel free to add a comment here..."></textarea>
                    </div>

                    <button type="submit" class="btn btn-lg btn-primary" id="sendButton"><i class="fas fa-paper-plane"></i> Submit</button>
                    <button type="reset" class="btn btn-lg btn-warning" id="cancelButton"><i class="fas fa-undo"></i> Cancel</button>
                </form>

            </div>
        </div>

<%- include ../partials/bottom-nav.ejs %>
 
<%- include ../partials/footer.ejs %>